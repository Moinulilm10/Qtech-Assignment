{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "jsconfig.json"],
  "exclude": ["node_modules"]
}
